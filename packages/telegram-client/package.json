{
  "name": "@computer-master/telegram-client",
  "version": "1.0.0",
  "description": "A TypeScript HTTP client for the Telegram Bot API built with Bun",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build index.ts --outfile dist/index.js",
    "dev": "bun run index.ts",
    "test": "bun test",
    "example": "bun run example.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "telegram",
    "bot",
    "api",
    "client",
    "typescript",
    "bun"
  ],
  "author": "Computer Master",
  "license": "MIT",
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}