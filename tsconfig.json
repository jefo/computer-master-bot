{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"],
      "@composition/*": ["src/composition/*"],
      "@booking/*": ["packages/booking/src/*"],
      "@tg/*": ["packages/telegram-client/*"],
      "@computer-master-src/*": ["computer-master/src/*"],
      "@sales-bot-src/*": ["sales-bot/src/*"],
      "@esim-bot-src/*": ["esim-bot/src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "computer-master/src/**/*",
    "sales-bot/src/**/*",
    "esim-bot/src/**/*",
    "packages/**/*",
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
